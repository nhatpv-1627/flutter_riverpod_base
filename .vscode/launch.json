{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    // debug mode
    {
      "name": "develop",
      "request": "launch",
      "type": "dart",
      "args": ["--flavor", "develop", "--dart-define=environmentName=develop"]
    },
    {
      "name": "staging",
      "request": "launch",
      "type": "dart",
      "args": ["--flavor", "staging", "--dart-define=environmentName=staging"]
    },
    {
      "name": "production",
      "request": "launch",
      "type": "dart",
      "args": [
        "--flavor",
        "production",
        "--dart-define=environmentName=production"
      ]
    },

    // release mode
    {
      "name": "develop-release",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release",
      "args": ["--flavor", "develop", "--dart-define=environmentName=develop"]
    },
    {
      "name": "staging-release",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release",
      "args": ["--flavor", "staging", "--dart-define=environmentName=staging"]
    },
    {
      "name": "production-release",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release",
      "args": [
        "--flavor",
        "production",
        "--dart-define=environmentName=production"
      ]
    }
  ]
}
